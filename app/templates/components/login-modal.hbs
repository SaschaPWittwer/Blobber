<div class="modal" id="loginModal" tabindex="-1" role="dialog" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">{{t "login"}}</h4>
                <button type="button" class="close" {{action "close"}}>
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group text-left">
                        <label for="user-name" class="col-form-label">{{t "username"}}</label>
                        {{input value=username type="text" class="form-control" id="user-name"}}
                    </div>
                    <div class="form-group text-left">
                        <label for="password-text" class="col-form-label">{{t "password"}}</label>
                        {{input value=password type="password" class="form-control" id="password-text"}}
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="d-flex justify-content-between w-100">
                    <div>
                        {{#link-to "register" tagName="button" class="btn btn-link"}} {{t "register"}} {{/link-to}}
                    </div>
                    <div>
                        <button type="button" class="btn btn-primary" {{action "doLogin"}}>Go!</button>
                        <button type="button" class="btn btn-secondary" {{action "close"}}>{{t "close"}}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>