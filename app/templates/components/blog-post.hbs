<div class="card border-light mb-2">
    <div class="card-body text-left">
        {{#link-to "post.view" post.id tagName="h4" class="card-title blogTitle"}} {{post.title}} {{/link-to}}
        <p class="card-text blogContent">
            {{simple-mde-preview post.content}}
        </p>
        {{!-- Use flexbox for aligning ... --}}
        <footer class="blockqoute-footer justify-content-between">
            <small class="text-muted inline">
                {{post.creator}} - {{post.date}}
            </small>
            <div class="w-25 d-inline-block">
                <span class="badge badge-success">Like</span>
                <span class="badge badge-danger">Unlike</span>
            </div>
        </footer>
    </div>
</div>
<div class="d-flex flex-column align-items-center">
    {{#if isDetail}}
    <div class="list-group w-50">
        {{#each post.comments as |comment|}}
        <div class="list-group-item flex-column align-items-start">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">{{comment.username}}</h5>
                <small>{{comment.date}}</small>
            </div>
            <p class="mb-1">{{comment.content}}</p>
        </div>
        {{/each}}
    </div>
    {{#if session.isAuthorized}}
    <div class="input-group mt-1 w-50">
        {{input value=comment type="text" class="form-control" placeholder="Add comment"}}
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button" {{action "addComment" post}}>{{t 'add'}}</button>
        </div>
    </div>
    {{/if}} {{/if}}
</div>