{{#each posts as |post|}}
    <div class="card post mx-auto">
        <h4 class="card-header">
            {{post.title}}
        </h4>
        <div class="card-body">
            <p class="card-text">{{post.content}}</p>
        </div>
        <div class="card-footer text-muted">
            {{post.creator}} - {{post.date}}
        </div>
    </div>
{{/each}}