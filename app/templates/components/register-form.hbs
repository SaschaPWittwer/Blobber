<h3 class="font-weight-light mb-4">{{t "createUser"}}</h3>
<form {{action "register" on="submit" }} class="text-left">
    <div class="form-row">
        <div class="form-group col">
            <label for="firstName">{{t "firstname"}}</label>
            {{input type="text" value=firstname class="form-control" id="firstName" required="true"}}
        </div>
        <div class="form-group col">
            <label for="lastName">{{t "lastname"}}</label>
            {{input type="text" value=lastname class="form-control" id="lastName" required="true"}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col">
            <label for="mail">{{t "mail"}}</label>
            {{input type="mail" value=mail class="form-control" id="mail" required="true"}}
        </div>
        <div class="form-group col">
            <label for="mailrepeat">{{t "mailrepeat"}}</label>
            {{input type="mail" value=mailRepeated class="form-control" id="mailrepeat" required="true"}}
        </div>
    </div>
    <div class="form-group">
        <label for="username">{{t "username"}}</label>
        {{input type="text" value=username class="form-control" id="username" required="true"}}
    </div>
    <div class="form-row">
        <div class="form-group col">
            <label for="password">{{t "password"}}</label>
            {{input type="password" value=password class="form-control" id="password" required="true"}}
        </div>
        <div class="form-group col">
            <label for="passwordRepeat">{{t "passwordrepeat"}}</label>
            {{input type="password" value=passwordRepeated class="form-control" id="passwordRepeat" required="true"}}
        </div>
    </div>
    {{#if hasError}}
    <div class="alert alert-danger" role="alert">
        {{errorText}}
    </div>
    {{/if}}
    <button type="submit" class="btn btn-primary">{{t "register"}}</button>
</form>