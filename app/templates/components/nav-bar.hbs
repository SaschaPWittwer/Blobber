<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    {{#link-to "index"}}
        <a class="navbar-brand" href="#">Blobber</a>
    {{/link-to}}
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            {{#if session.isAuthorized}}
                {{#link-to "post.new" tagName="li"}}
                    <a class="nav-link" href="#">{{t "newPost"}}</a>
                {{/link-to}}
            {{/if}}
        </ul>
        <ul class="navbar-nav ml-auto mr-2">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown">
                    {{!-- {{t "language"}} --}}
                    {{i18n.locale}}
                </a>
                <div class="dropdown-menu">
                    {{#each i18n.locales as |locale|}}
                        <a class="dropdown-item" href="#" {{action "setLanguage" locale}}>{{locale}}</a>
                    {{/each}}
                </div>
            </li>
            {{#if session.isAuthorized}}
                <li>
                    <a class="nav-link" href="#" {{action "logout"}}>{{t "logout"}}</a>
                </li>
            {{else}}
                {{#link-to "login" tagName="li"}}
                    <a class="nav-link" href="#">{{t "login"}}</a>
                {{/link-to}}
            {{/if}}
        </ul>
        <form class="form-inline my-2 my-lg-0" {{action "search" on="submit" }}>
            {{input value=searchFilter class="form-control mr-sm-2" type="text" placeholder=(t "searchPlaceholder")}}
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">{{t "search"}}</button>
        </form>
    </div>
</nav>