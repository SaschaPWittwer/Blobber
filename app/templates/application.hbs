<div class="container-fluid">
    {{nav-bar}}
</div>
<div class="container-fluid text-center content">
    <div class="row">
        <div class="col-2 text-left d-none d-lg-block d-xl-block">
            <h3 class="font-weight-light">{{t "hotPosts"}}</h3>
            <ul class="nav flex-column">
                {{#each model as |hotPost|}}
                    <li class="nav-item">
                        {{#link-to "post.view" hotPost class="nav-link"}}
                            {{hotPost.title}} <span class="badge badge-light">3</span>
                        {{/link-to}}
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class="col">
            {{outlet}}
        </div>
    </div>
</div>
<div class="container-fluid">
    {{footer-bar}}
</div>