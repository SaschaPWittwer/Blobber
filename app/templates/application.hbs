<div class="container-fluid text-center content">
    <div class="row">
        {{nav-bar}}
    </div>
    <div class="row">
        <div class="col-2 text-left d-none d-lg-block d-xl-block">
            <h3 class="font-weight-light">{{t "hotPosts"}}</h3>
            <ul class="nav flex-column">
                {{#each hotPosts as |hotPost|}}
                    <li class="nav-item">
                        {{#link-to "post.view" hotPost class="nav-link"}}
                        <div class="d-flex justify-content-between">
                            <div>
                                {{text-limit hotPost.title}}
                            </div>
                            <span class="badge badge-light">{{hotPost.likes}}</span>
                        </div>
                        {{/link-to}}
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class="col" style="padding-bottom: 100px">
            {{outlet}}
        </div>
    </div>
    <div class="row">
        {{footer-bar}}
    </div>
</div>